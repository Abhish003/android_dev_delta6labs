<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="173dp"
        android:layout_height="56dp"

        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Create your account"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/Email_input"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/Email_input"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/Fullname_input"
        android:layout_width="315dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_courners_input_fields"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Full name :"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/Password_input"
        app:layout_constraintStart_toStartOf="@+id/Password_input"
        app:layout_constraintTop_toBottomOf="@+id/Email_input" />

    <EditText
        android:id="@+id/Email_input"
        android:layout_width="315dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_courners_input_fields"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email :"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/Fullname_input"
        app:layout_constraintStart_toStartOf="@+id/Fullname_input"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/Password_input"
        android:layout_width="315dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_courners_input_fields"
        android:drawableStart="@drawable/baseline_keyboard_24"
        android:hint="Password :"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/ConfirmPassword_input"
        app:layout_constraintStart_toStartOf="@+id/ConfirmPassword_input"
        app:layout_constraintTop_toBottomOf="@+id/Fullname_input" />

    <EditText
        android:id="@+id/ConfirmPassword_input"
        android:layout_width="316dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_courners_input_fields"
        android:drawableStart="@drawable/baseline_keyboard_24"
        android:hint="Confirm Password :"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:drawablePadding="10dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/Password_input" />

    <Button
        android:id="@+id/button2"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#C83C32"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword_input" />


    <TextView
        android:id="@+id/textViewLoginOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Already have an account? Login"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>